{
    "compilerOptions": {
      "rootDir": ".",
      "module": "ESNext",
      "target": "es6",
      "lib": ["es6", "dom"],
      "allowJs": true,
      "jsx": "react",
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "outDir": "lib",
      "sourceMap": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }